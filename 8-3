import java.util.Scanner;

// Interface for shape
interface ShapeInterface {
    void computeArea();
}

// Rectangle class implementing ShapeInterface
class RectangleInterface implements ShapeInterface {
    private double length;
    private double breadth;

    // Constructor to initialize rectangle dimensions
    public RectangleInterface(double length, double breadth) {
        this.length = length;
        this.breadth = breadth;
    }

    // Implementation of computeArea() for rectangle
    @Override
    public void computeArea() {
        double area = length * breadth;
        System.out.println("Area of the rectangle: " + area);
    }
}

// Circle class implementing ShapeInterface
class CircleInterface implements ShapeInterface {
    private double radius;

    // Constructor to initialize circle radius
    public CircleInterface(double radius) {
        this.radius = radius;
    }

    // Implementation of computeArea() for circle
    @Override
    public void computeArea() {
        double area = Math.PI * radius * radius;
        System.out.println("Area of the circle: " + area);
    }
}

// Main class
public class AreaUsingInterface {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Input for rectangle
        System.out.print("Enter the length of the rectangle: ");
        double length = sc.nextDouble();
        System.out.print("Enter the breadth of the rectangle: ");
        double breadth = sc.nextDouble();
        RectangleInterface rectangle = new RectangleInterface(length, breadth);
        rectangle.computeArea();

        // Input for circle
        System.out.print("Enter the radius of the circle: ");
        double radius = sc.nextDouble();
        CircleInterface circle = new CircleInterface(radius);
        circle.computeArea();
    }
}
